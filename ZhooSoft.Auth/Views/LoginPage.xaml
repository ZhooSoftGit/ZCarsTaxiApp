<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ZhooSoft.Auth.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrl="clr-namespace:ZhooSoft.Controls;assembly=ZhooSoft.Controls"
    xmlns:resource="clr-namespace:ZhooSoft.Auth.Resources.Strings"
    Title="LoginPage"
    Padding="0"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.0" Color="#4DB6AC" />
            <!--  Top  -->
            <GradientStop Offset="0.9" Color="#4DB6AC" />
            <!--  90% Teal  -->
            <GradientStop Offset="1.0" Color="White" />
            <!--  Top: Accent/Teal  -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout
        Padding="10,0"
        HorizontalOptions="Center"
        MaximumWidthRequest="400"
        VerticalOptions="End">

        <ctrl:CustomBorder BackgroundColor="Transparent" Stroke="Transparent">
            <Image Source="drivericon.png" />
        </ctrl:CustomBorder>

        <Label
            FontAttributes="Bold"
            FontSize="36"
            HorizontalOptions="Center"
            Text="ZCARS"
            TextColor="White" />


        <ctrl:CustomBorder
            Padding="30,30,30,100"
            BackgroundColor="White"
            Stroke="White"
            StrokeShape="RoundRectangle 20,20,0,0">

            <VerticalStackLayout Spacing="10">
                <ctrl:CustomLabel Text="Enter your mobile no" />
                <!--  Phone Number Container  -->
                <ctrl:SfEntry
                    Margin="0"
                    CharMaxLength="10"
                    FocusedStrokeThickness="2"
                    HeightRequest="80"
                    Hint="Phone Number"
                    Keyboard="Telephone"
                    OutlineCornerRadius="5"
                    SfText="{Binding PhoneNumber}"
                    Stroke="LightGray">
                    <ctrl:SfEntry.Triggers>
                        <DataTrigger
                            Binding="{Binding IsPhoneValid}"
                            TargetType="ctrl:SfEntry"
                            Value="False">
                            <Setter Property="Stroke" Value="LightGray" />
                        </DataTrigger>
                        <DataTrigger
                            Binding="{Binding IsPhoneValid}"
                            TargetType="ctrl:SfEntry"
                            Value="True">
                            <Setter Property="Stroke" Value="#00796B" />
                        </DataTrigger>
                    </ctrl:SfEntry.Triggers>
                </ctrl:SfEntry>

                <!--  Continue Button  -->
                <Button
                    BackgroundColor="#00796B"
                    Command="{Binding SendOtpCommand}"
                    CornerRadius="30"
                    FontSize="16"
                    HeightRequest="50"
                    IsEnabled="{Binding IsPhoneValid}"
                    Text="Continue"
                    TextColor="White"
                    VerticalOptions="End">
                    <Button.Triggers>
                        <DataTrigger
                            Binding="{Binding IsPhoneValid}"
                            TargetType="Button"
                            Value="False">
                            <Setter Property="Opacity" Value="0.7" />
                        </DataTrigger>
                        <DataTrigger
                            Binding="{Binding IsPhoneValid}"
                            TargetType="Button"
                            Value="True">
                            <Setter Property="Opacity" Value="1" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
            </VerticalStackLayout>


        </ctrl:CustomBorder>



    </VerticalStackLayout>
</ContentPage>