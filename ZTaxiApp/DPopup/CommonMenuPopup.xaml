<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="ZTaxiApp.DPopup.CommonMenuPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrl="clr-namespace:ZhooSoft.Controls;assembly=ZhooSoft.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    HorizontalOptions="Fill"
    VerticalOptions="Fill">

    <!--  Full-screen content  -->
    <Grid
        x:Name="PopupContent"
        Padding="20"
        BackgroundColor="White"
        HorizontalOptions="Fill"
        RowDefinitions="auto,auto,*,auto"
        RowSpacing="10"
        TranslationX="-5000"
        VerticalOptions="Fill">

        <!--  Top: Menu Title  -->
        <HorizontalStackLayout
            Grid.Row="0"
            Spacing="10"
            VerticalOptions="Start">
            <ctrl:CustomImage Command="{Binding CloseCommand}" Source="back.png" />
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Menu"
                VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!--  Profile Card  -->
        <ctrl:CustomBorder
            Grid.Row="1"
            Margin="0,10"
            Padding="15"
            BackgroundColor="White"
            CornerRadius="15"
            Stroke="Gray"
            StrokeShape="RoundRectangle 16">
            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="6">
                    <Label
                        FontFamily="zappfont"
                        FontSize="60"
                        HorizontalTextAlignment="Center"
                        Text="&#xe975;"
                        TextColor="{DynamicResource PrimaryLight}"
                        VerticalTextAlignment="Center"
                        WidthRequest="60" />
                    <VerticalStackLayout>
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="Rajesh" />
                        <Label
                            FontSize="14"
                            Text="8344273152"
                            TextColor="Gray" />
                    </VerticalStackLayout>
                    <Image HorizontalOptions="EndAndExpand" Source="chevron_right.png" />
                </HorizontalStackLayout>

                <ctrl:CustomBorder
                    Padding="8,4"
                    BackgroundColor="#FFFDE7"
                    BorderColor="Yellow"
                    CornerRadius="8">
                    <HorizontalStackLayout>
                        <Image
                            HeightRequest="16"
                            Source="star_icon.png"
                            WidthRequest="16" />
                        <Label
                            Margin="5,0,0,0"
                            FontSize="14"
                            Text="4.73 My Rating" />
                    </HorizontalStackLayout>
                </ctrl:CustomBorder>
            </VerticalStackLayout>
        </ctrl:CustomBorder>

        <!--  Main Scroll Content  -->
        <ScrollView Grid.Row="2" VerticalScrollBarVisibility="Never">

            <!--  Menu Items  -->
            <VerticalStackLayout>
                <!--  Repeat for each item  -->
                <Grid
                    Padding="0,12"
                    ColumnDefinitions="Auto,*,Auto"
                    ColumnSpacing="10">
                    <Label
                        FontFamily="zappfont"
                        FontSize="24"
                        HorizontalTextAlignment="Center"
                        Text="&#xe904;"
                        TextColor="{DynamicResource Primary}"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="1"
                        FontSize="16"
                        Text="Help" />
                    <Label
                        Grid.Column="2"
                        FontFamily="zappfont"
                        FontSize="24"
                        Text="&#xe9b2;"
                        TextColor="Black"
                        WidthRequest="20" />

                </Grid>

                <BoxView BackgroundColor="{DynamicResource Primary}" HeightRequest="1" />

                <Grid
                    Padding="0,12"
                    ColumnDefinitions="Auto,*,Auto"
                    ColumnSpacing="10">
                    <Label
                        FontFamily="zappfont"
                        FontSize="18"
                        HorizontalTextAlignment="Center"
                        Text="&#xe936;"
                        TextColor="{DynamicResource Primary}"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="1"
                        FontSize="16"
                        Text="Ride History" />
                    <Label
                        Grid.Column="2"
                        FontFamily="zappfont"
                        FontSize="24"
                        Text="&#xe9b2;"
                        TextColor="Black"
                        WidthRequest="20" />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OnRideHistoryCmd}" />
                    </Grid.GestureRecognizers>
                </Grid>
                <BoxView BackgroundColor="{DynamicResource Primary}" HeightRequest="1" />


                <!--  Add similar blocks for Payment, My Rides, Safety, etc.  -->
            </VerticalStackLayout>
        </ScrollView>

        <Grid
            Grid.Row="3"
            HorizontalOptions="Fill"
            RowDefinitions="auto,auto">
            <Label HorizontalOptions="Center" Text="Zhoosoft Pvt Limited" />
            <Label
                Grid.Row="1"
                HorizontalOptions="Center"
                Text="version 1.0" />
        </Grid>
    </Grid>
</toolkit:Popup>
